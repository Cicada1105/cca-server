//- This file holds the pug mixin for the add card when user clicks on add button for respective sections
mixin futureAddCard
	section.card#addCard
		header
			span.cardFunction
		form#addForm
			input(type="text" name="title" spellcheck="true" placeholder="Enter Name...")
			input(type="text" name="location" id="location" placeholder="Location...")
			div#instrumentsCont
				input(type="text" maxlength="18" placeholder="Instrument...")
				input(type="button" id="add_instrument" value="Add")
				ul#instruments
			input(type="date" name="date")
			label(for="start") Start Time:
			input(type="time" name="start_time" id="start")
			label(for="end") End Time:
			input(type="time" name="end_time" id="end")
			textarea(name="description" rows="4" cols="50" spellchheck="true" wrap="soft" placeholder="Enter Description...")
		aside.controlsCont
			span.msg
			div#ctrlBtnAdd
				i(class="fas fa-check-circle")
			div#ctrlBtnClear
				i(class="fas fa-times-circle")