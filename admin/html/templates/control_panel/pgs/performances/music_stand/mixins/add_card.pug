//- This file holds the pug mixin for the add card when user clicks on add button for respective sections
mixin presentAddCard
	section.card#addCard
		header
			span.cardFunction
		form#addForm
			input(type="text" name="name" spellcheck="true" placeholder="Enter Name...")
			input(type="text" name="composer" spellcheck="true" placeholder="Enter Composer...")
			textarea(name="description" rows="4" cols="50" spellchheck="true" wrap="soft" placeholder="Enter Description...")
		aside.controlsCont
			span.msg
			div#ctrlBtnAdd
				i(class="fas fa-check-circle")
			div#ctrlBtnClear
				i(class="fas fa-times-circle")