//- This file holds the pug mixin for the add reed card

//- Extend base add-edit carrd
include ./template.pug

mixin addReed
	+baseCard(id="reedInputCard")
		div.inputRow
			label(for="reedNameInput") Name: &nbsp;&nbsp;
			input(type="text" id="reedNameInput" name="name" placeholder="Reed Name...")
		div.inputRow
			label(for="reedDescriptionInput") Description: &nbsp;&nbsp;
			textarea(name="description" id="reedDescriptionInput" rows="4" cols="50" spellchheck="true" wrap="soft" placeholder="Enter Description...")
		table.displayRatesInputTable
			caption.inputRatesTableCaption
				h4 Rates
			thead
				tr
					td Quantity
					td Price
					td
			tbody
				tr
					td
						input(type="number" id="quantityInput" placeholder="00" name="quantity" min="0" step="1")
					td
						input(type="text" id="priceInput" placeholder="00" name="price" min="0")
					td
						i(class="far fa-plus-square").addIcon