mixin ratesInputTable(pricing = {})
  - var isFlatRate = pricing.flatRate;
  label(for='flatRateCheckbox') Flat Rate: &nbsp;&nbsp;
  input(type='checkbox' id='flatRateCheckbox' checked=isFlatRate)
  table.displayRatesInputTable
    caption.inputRatesTableCaption
      h5 Rates
      div.inputRow
        label(for='rateNameInput') Rate Name
        input(type='text' id='rateNameInput' placeholder='Rate Name')
    thead
      tr
        td Name
        td Price
        td
      tr
        td Flat Rate
    tbody
      tr
        td
          input(type="text" id="nameInput" placeholder="Name")
        td
          input(type="text" id="priceInput" placeholder="00" min="0")
        td
          i(class="far fa-plus-square addIcon" onclick='addReedRate()')
      tr
        td
          input(type='text' id='flatRateInput' placeholder='00' min='0' value=`${pricing.flatRate || ''}` pattern="\\d+(?:(\\.\\d{2}))?")
      if ( pricing.rates )
        each rate in pricing.rates
          tr
            td= rate['name']
            td= rate['cost']
            td
              i(class='far fa-trash-alt')