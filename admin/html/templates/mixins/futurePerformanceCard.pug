//- This file is a template for the future performance info
mixin futurePerformanceCard(performance)
	section.card.futureCard
		h2 #{performance.name}
		article.subHeaderCont
			h4 #{performance.location}
			div.instrumentsCont
				- for (let i = 0; i < performance.instruments.length; i++)
					if i===0
						h4 #{performance.instruments[i]}
					else
						h4!= `,&nbsp;&nbsp;&nbsp;${performance.instruments[i]}`
		p.date #{performance.date}
		-
			let startTime = performance.time.start > 12 ? performance.time.start-12 : performance.time.start;
			let startTimePeriod = performance.time.start < 12 ? "AM" : "PM";
			let endTime = performance.time.end > 12 ? performance.time.end - 12 : performance.time.end;
			let enndTimePeriod = performance.time.end < 12 ? "AM" : "PM";
		p.time #{startTime}#{startTimePeriod} - #{endTime}#{enndTimePeriod}
		p #{performance.description}
		div.controlsCont
			span.msg
			div.ctrlBtnEdit
				i(class="far fa-edit" data-id=`${performance.id}`)
			div.ctrlBtnDelete
				i(class="far fa-times-circle" data-id=`${performance.id}`)